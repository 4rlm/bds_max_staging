<div class="row text-center pageHeading">
  <div class="col-md-3">
    <h1>Dashboards</h1>
  </div>
  <div class="col-md-2">
    <div class="modal-btn">
      <% if advanced_and_up %>
      <%= link_to 'Download CSV', dashboards_path(format: "csv"), class: 'btn btn-primary btn-xs' %>
      <% end %>
    </div>
  </div>
</div>

<div id="dashboard" class="row profile-row">
  <div class="profile-col col-md-12">
    <table class="table table-bordered indexer-table">
      <thead>
        <tr>
          <th>db_name</th>
          <th>db_alias</th>
          <th>col_name</th>
          <th>col_alias</th>
          <th>col_total</th>
          <th>item_list_total</th>
          <th>obj_list</th>
          <th>item_list</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @dashboards.each do |dashboard| %>
        <tr>
          <td><%= dashboard.db_name %></td>
          <td><%= dashboard.db_alias %></td>
          <td><%= dashboard.col_name %></td>
          <td><%= dashboard.col_alias %></td>
          <td><%= dashboard.col_total %></td>
          <td><%= dashboard.item_list_total %></td>
          <td><%= dashboard.obj_list %></td>
          <td><%= dashboard.item_list %></td>
          <% if admin_only %>
          <td><%= link_to 'Edit', edit_dashboard_path(dashboard) %></td>
          <td><%= link_to 'Destroy', dashboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
